<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#FE8C8C" />
      <stroke
          android:width="1dp"
          android:color="#FE8C8C" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="15dp"
          android:top="10dp"
          android:right="15dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item android:state_enabled="false" >
    <shape>
      <solid
          android:color="#FE8C8C" />
      <stroke
          android:width="1dp"
          android:color="#FE8C8C" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="15dp"
          android:top="10dp"
          android:right="15dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#D01414"
          android:endColor="#D01414"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#D01414" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="15dp"
          android:top="10dp"
          android:right="15dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>