<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ResultActivity" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   	android:background="#FFFFFF"
    android:weightSum="1.0"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_header"
            android:layout_width="fill_parent"
        	android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="0.105" 
    		android:background="@drawable/header"
            android:padding="7dip" >
		    
	            <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="horizontal"
	    		android:weightSum="1.0">

		            <LinearLayout
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
	        			android:gravity="center_horizontal|center_vertical"
            			android:layout_weight="0.2">
					    <ImageView
			           		android:focusable="false"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"/>
	       			</LinearLayout>
	    		
		    		<TextView
		            	android:textColor="#ffffff"
				        android:layout_width="0dp"
				        android:layout_height="fill_parent"
	        			android:gravity="center_horizontal|center_vertical"
			        	android:textSize="21sp"
			        	android:text="Respuesta del Banco"
				        android:shadowColor="#7D7D7D"  
				        android:shadowRadius="2.5"  
				        android:shadowDx="-2"  
				        android:shadowDy="2" 
	            		android:layout_weight="0.6" />
		    
		            <LinearLayout
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
	        			android:gravity="right|center_vertical"
            			android:layout_weight="0.2"> 
	       			</LinearLayout>
	    		
	       		</LinearLayout>

        </LinearLayout>
        
		<View android:layout_width="fill_parent" android:layout_height="2dip"
			android:background="#002650" />
		<View
       		android:layout_width="fill_parent"
        	android:layout_height="2dip"
        	android:background="@drawable/drop_shadow" >
    	</View>
    	
    	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            android:layout_weight="0.2">
		    
            <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="vertical" > 
        		
	        	<RelativeLayout
			   		android:layout_width="fill_parent"
			     	android:layout_height="fill_parent"
			   		android:background="@color/andresblue"
	    			android:paddingLeft="7dp"
	    			android:paddingRight="5dp"
	    			android:paddingBottom="10dp">
	
					<ImageView
			           	android:id="@+id/logo"
			         	android:focusable="false" 
			         	android:layout_centerVertical="true"
					  	android:layout_width="75sp"
					  	android:layout_height="wrap_content"
					  	android:layout_marginRight="5sp"
					  	android:src="@drawable/locatel"/>
        		
	        		<RelativeLayout
	            		android:id="@+id/datos" 
			   			android:layout_width="wrap_content"
			     		android:layout_height="wrap_content" 
	            		android:layout_toRightOf="@+id/logo" 
				        android:layout_centerVertical="true">
			
					    <TextView
					        android:id="@+id/rif" 
				            android:textColor="#FFFFFF"
		            		android:textSize="13sp"    
	    					android:textStyle="bold" 
					        android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="Rif: 1122003xx0-0"/>
			
					    <TextView
					        android:id="@+id/ubicacion" 
				            android:textColor="#FFFFFF"
		            		android:textSize="13sp"   
	    					android:textStyle="bold"
	    					android:layout_below="@+id/rif" 
					        android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="Caracas Distrito..."/>
			
					    <TextView
					        android:id="@+id/monto" 
				            android:textColor="#FFFFFF"
		            		android:textSize="13sp"    
	    					android:textStyle="bold"   
	    					android:layout_below="@+id/ubicacion" 
					        android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="Monto: 0,00 Bs"/>
			
					    <TextView
					        android:id="@+id/cedula" 
				            android:textColor="#FFFFFF"
		            		android:textSize="13sp"   
	    					android:textStyle="bold"  
	    					android:layout_below="@+id/monto" 
					        android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="Cedula:"/>
				    
	        		</RelativeLayout>   
				
					<TextView
						android:id="@+id/fecha"
		    			android:textColor="#FFFFFF"
		            	android:textSize="14sp"
						android:focusable="false"
						android:layout_alignParentRight="true"  
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" /> 
					    
	        	</RelativeLayout>   
	        	
	     	</LinearLayout>
	     	
		</LinearLayout>
      	
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp" 
	        android:gravity="center_horizontal"
	        android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_weight="0.695">
      	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	        	android:gravity="center_horizontal|center_vertical"
	            android:orientation="vertical">
      	
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"  
	        		android:gravity="center_horizontal|center_vertical"
					android:layout_marginBottom="15dp"
		            android:orientation="horizontal">
			
					<TextView
						android:id="@+id/resultado"
		    			android:textColor="#727272"
		    			android:textStyle="bold"
		            	android:textSize="25sp"
						android:focusable="false" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/> 
	
					<ImageView 
						android:id="@+id/resultadoImagen"
			         	android:focusable="false"  
					  	android:layout_width="45sp"
					  	android:layout_height="wrap_content"/>
						
	     		</LinearLayout>  
			
					<TextView 
		    			android:textColor="@color/black"
		    			android:textStyle="bold"
		            	android:textSize="20sp"
						android:focusable="false" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="5dp"
						android:text="Desea recibir un correo?"/>   
						
					<EditText
						android:id="@+id/correo"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:scrollHorizontally="true"
						android:hint="Correo"
						android:inputType="none" />
			
				    <Button
           	 			android:id="@+id/enviarCorreoButton"
			        	android:background="@drawable/button_reversar"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content" 
				        android:textColor="#FFFFFF"
						android:textSize="15sp"
						android:layout_marginBottom="5dp"
				        android:text="Enviar"  />
			
				    <Button
           	 			android:id="@+id/finalizarResultButton"
			        	android:background="@drawable/button_reversar"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content" 
				        android:textColor="#FFFFFF"
						android:textSize="15sp"
				        android:text="Finalizar"  />
	        	
	     	</LinearLayout>
	     	 
        </LinearLayout> 
        
</LinearLayout>