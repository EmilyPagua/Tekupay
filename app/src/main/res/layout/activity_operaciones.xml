<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/operacionesContent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".OperacionesActivity" 
    android:background="#FFFFFF"
    android:orientation="vertical">
    
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
 	android:id="@+id/backgroundReverso"
	android:background="@color/blue"
    android:orientation="vertical" >

	<RelativeLayout
    	android:id="@+id/top_header"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical"
    	android:background="@drawable/header_tabs"
      	android:padding="10dip" >
	    		
		<TextView
			android:textColor="#FFFFFF"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textSize="25sp"
    		android:textStyle="bold"
			android:text="Operaciones"  />
	
	</RelativeLayout> 

	<LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
		android:gravity="center_horizontal|center_vertical" 
    	android:orientation="vertical" >  

		<LinearLayout 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
			android:background="@drawable/operaciones_box"
	    	android:orientation="vertical" >  

			<LinearLayout 
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"  
		    	android:orientation="horizontal" > 

				<LinearLayout 
			    	android:layout_width="200sp"
			    	android:layout_height="wrap_content" 
			    	android:padding="10dp"
			    	android:orientation="vertical" > 
		    		
					<TextView
						android:textColor="@color/black"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
					 	android:gravity="center_vertical"
						android:textSize="25sp"
			    		android:textStyle="bold"
						android:text="Consultar"  />
		    		
					<TextView
						android:textColor="@color/black"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
					 	android:gravity="center_vertical"
						android:textSize="15sp" 
						android:text="Con esta operación podrá realizar la consulta de sus transacciones siempre y cuando no haya realizado el cierre antes." />
				
				</LinearLayout>  
		    	
				<Button 
 					android:id="@+id/button_consultar_operaciones"
			      	android:background="@drawable/button_consultar_operaciones"
				  	android:layout_width="wrap_content"
				   	android:layout_height="fill_parent" 
				  	android:textColor="#FFFFFF"
					android:textSize="35dp"
		    		android:textStyle="bold"
				  	android:text=">"  />
			
			</LinearLayout>  
        
			<View android:layout_width="fill_parent" 
			    android:layout_height="2sp"
				android:background="@color/andresblue" />

			<LinearLayout 
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"  
		    	android:orientation="horizontal" > 

				<LinearLayout 
			    	android:layout_width="200sp"
			    	android:layout_height="wrap_content" 
			    	android:padding="10dp"
			    	android:orientation="vertical" > 
		    		
					<TextView
						android:textColor="@color/black"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
					 	android:gravity="center_vertical"
						android:textSize="25sp"
			    		android:textStyle="bold"
						android:text="Reversar"  />
		    		
					<TextView
						android:textColor="@color/black"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
					 	android:gravity="center_vertical"
						android:textSize="15sp" 
						android:text="Con esta operación podrá realizar el reverso de su última transaccion exitosa siempre y cuando no haya realizado el cierre antes."  />
				
				</LinearLayout>  
		    	
				<Button 
 					android:id="@+id/button_reversar_operaciones"
			      	android:background="@drawable/button_reversar_operaciones"
				  	android:layout_width="wrap_content"
				   	android:layout_height="fill_parent" 
				  	android:textColor="#FFFFFF"
					android:textSize="35dp"
		    		android:textStyle="bold"
				  	android:text=">"  />
			
			</LinearLayout>  
		
		</LinearLayout>  
	
	</LinearLayout> 

</LinearLayout> 

</LinearLayout>